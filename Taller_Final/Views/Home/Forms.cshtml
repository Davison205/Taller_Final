<!-- general form elements -->
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Registro producto</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="idProducto">ID</label>
                        <input type="text" class="form-control" id="idProducto" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="nombreProducto">Nombre producto</label>
                        <input type="text" class="form-control" id="nombreProducto" placeholder="Enter nombre producto">
                    </div>
                    <div class="form-group">
                        <label for="categoriaProducto">Categoria</label>
                        <input type="text" class="form-control" id="categoriaProducto" placeholder="Enter Categoria">
                    </div>
                    <div class="form-group">
                        <label for="categoriaProducto">Precio</label>
                        <input type="text" class="form-control" id="categoriaProducto" placeholder="Enter Categoria">
                    </div>
                    <div class="form-group">
                        <label for="descripcionProducto">Descripción</label>
                        <input type="text" class="form-control" id="descripcionProducto" placeholder="Enter Descripción">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="editImage">Editar Imagen</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="editImage">
                                <label class="custom-file-label" for="editImage">Seleccionar archivo</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Subir</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="feIngresoProducto">Fecha ingreso</label>
                        <input type="date" class="form-control" id="feIngresoProducto" placeholder="Enter Fecha">
                    </div>
                    <div class="form-group">
                        <label for="feCaducidadProducto">Fecha caducidad</label>
                        <input type="date" class="form-control" id="feCaducidadProducto" placeholder="Enter Fecha">
                    </div>
                    <div class="form-group">
                        <label for="stockProducto">Stock</label>
                        <input type="number" class="form-control" id="stockProducto" placeholder="Enter Stock">
                    </div>
                </div>       
             </div>
            </div>
            <!-- /.card-body -->

        <div class="card-footer">
            <button type="button" class="btn btn-secondary">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
</form>
</div>
<!-- /.card -->